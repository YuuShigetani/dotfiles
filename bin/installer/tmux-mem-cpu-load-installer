#!/bin/bash

if command -v cmake >/dev/null 2>&1; then
  [ -d $HOME/.tmux ] || mkdir $HOME/.tmux
  cd $HOME/.tmux
  git clone https://github.com/thewtex/tmux-mem-cpu-load.git
  ln -sf $HOME/dotfiles/.tmux/tmux-powerline/segments/tmux_mem_cpu_load.sh $HOME/.tmux/tmux-powerline/segments/tmux_mem_cpu_load.sh
  cd $HOME/.tmux/tmux-mem-cpu-load
  cmake .
  make
  sudo make install
fi
