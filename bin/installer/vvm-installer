#!/bin/bash

curl https://raw.github.com/kana/vim-version-manager/master/bin/vvm | sed -e s/git:/https:/ | python - setup
test -f $HOME/.vvm/etc/login && source $HOME/.vvm/etc/login

# install vim7.4
vvm install vimorg--v7-4 \
    --enable-multibyte \
    --with-features=huge \
    --enable-fontset \
    --disable-selinux \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-python3interp \
    --enable-rubyinterp \
    --enable-xim \
    --enable-luainterp \
    --with-lua-prefix=/usr
vvm use vimorg--v7-4

[ -d $HOME/.vim ] || mkdir $HOME/.vim
