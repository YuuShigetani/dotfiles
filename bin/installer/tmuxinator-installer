#!/bin/bash

if command -v gem >/dev/null 2>&1; then
  RBENV_ROOT=$HOME/.rbenv
  [ -d $RBENV_ROOT ] || RBENV_ROOT=/usr/local/rbenv
  $RBENV_ROOT/bin/rbenv exec gem install tmuxinator --no-ri --no-rdoc
  mv $HOME/.tmuxinator/* $HOME/dotfiles/.tmux/tmuxinator/
  rm -rf $HOME/.tmuxinator
  ln -s $HOME/dotfiles/.tmux/tmuxinator $HOME/.tmuxinator
fi
