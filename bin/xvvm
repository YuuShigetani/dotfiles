#!/bin/bash

vvm $1 $2 \
    --enable-multibyte \
    --with-features=huge \
    --enable-fontset \
    --disable-selinux \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-python3interp \
    --enable-rubyinterp \
    --enable-xim \
    --enable-luainterp \
    --with-lua-prefix=/usr
vvm use $2
exec $SHELL
