#!/bin/bash

version="vimorg--$2"
vvm $1 $version \
    --enable-multibyte \
    --with-features=huge \
    --enable-fontset \
    --disable-selinux \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-python3interp \
    --enable-rubyinterp \
    --enable-xim \
    --enable-luainterp \
    --with-lua-prefix=/usr
vvm use $version
exec $SHELL
