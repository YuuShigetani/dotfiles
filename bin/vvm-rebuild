#!/bin/bash

if [ $# -ne 1 ]; then
  exit 1
fi

vvm rebuild vimorg--v7-3-$1 \
    --enable-multibyte \
    --with-features=huge \
    --enable-fontset \
    --disable-selinux \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-rubyinterp \
    --enable-xim \
    --enable-python3interp \
    --enable-luainterp \
    --with-lua-prefix=/usr

exit 0
